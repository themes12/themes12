---
import BlogCard from '@/components/BlogCard.astro'
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import { buttonVariants } from '@/components/ui/button'
import { SITE } from '@/consts'
import Layout from '@/layouts/Layout.astro'
import { getRecentPosts } from '@/lib/data-utils'

const blog = await getRecentPosts(SITE.featuredPostCount)
---

<Layout class="max-w-3xl">
  <PageHead slot="head" title="Home" />
  <section class="rounded-lg border">
    <div class="flex flex-col space-y-1.5 p-6">
      <h3 class="text-3xl leading-none font-medium">Thiti Phutaarmart</h3>
      <p class="text-muted-foreground text-sm">
        Full-Stack Developer &bull; NLP Researcher
      </p>
    </div>
    <div class="flex flex-col gap-y-4 p-6 pt-0">
      <p class="text-muted-foreground text-sm">
        I'm a full-stack developer and researcher based in Ishikawa, Japan.
        Currently pursuing a Master's in Information Science at <Link
          href="https://www.jaist.ac.jp/english/"
          class="text-foreground"
          external
          underline>JAIST</Link
        >, with a focus on <span class="text-foreground font-medium"
          >Large Language Models</span
        >,
        <span class="text-foreground font-medium"
          >Natural Language Processing</span
        >, and
        <span class="text-foreground font-medium">low-resource languages</span>.
      </p>
      <div>
        <p class="text-muted-foreground mb-2 text-sm font-medium">
          Highlighted Work
        </p>
        <ul
          class="text-muted-foreground list-inside list-disc space-y-1 text-sm"
        >
          <li>
            <span class="text-foreground">DREAM-LLMs (ISWC 2025)</span> — A deliberation-based
            reasoning ensemble using GPT-4o, Claude 3.5, DeepSeek V3, and Gemini
            2.5 for term typing in low-resource domains
          </li>
          <li>
            <span class="text-foreground"
              >Prompt-Tuning-Based LLMs for Term Typing (ISWC 2024)</span
            > — Prompt-tuning-based approach for large language models
          </li>
          <li>
            <span class="text-foreground">LKS Wallet</span> — Digital payment system
            serving 3,000+ daily users and processing 220,000+ USD/month
          </li>
          <li>
            <span class="text-foreground">RAG Chatbot</span> — Industrial documentation
            chatbot built with Python and LangChain at Fufong Labs
          </li>
        </ul>
      </div>
    </div>
  </section>
  <section class="flex flex-col gap-y-4">
    <h2 class="text-2xl font-medium">Latest posts</h2>
    <ul class="flex flex-col gap-y-4">
      {
        blog.map((post) => (
          <li>
            <BlogCard entry={post} />
          </li>
        ))
      }
    </ul>
    <div class="flex justify-center">
      <Link
        href="/blog"
        class={buttonVariants({ variant: 'ghost' }) + ' group'}
      >
        See all posts <span
          class="ml-1.5 transition-transform group-hover:translate-x-1"
          >&rarr;</span
        >
      </Link>
    </div>
  </section>
</Layout>
